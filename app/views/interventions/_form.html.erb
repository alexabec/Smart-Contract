<section id="intervention">
        <div class="container">

            <div class="heading-title heading-dotted text-center">
                <h2>New Interventions</h2>
            </div>

<fieldset class="mb-0 box-border-shadow p-20">


<%= form_for(@intervention, local: true) do |form| %>
  <% if @intervention.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@intervention.errors.count, "error") %> prohibited this intervention from being saved:</h2>

      <ul>
      <% @intervention.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
                
     
    <h6><%="Customer Name"%></h6>
    <%= select_tag "customer_id", options_from_collection_for_select(Customer.all, "id", "contactFullName"), prompt: "None" %>
