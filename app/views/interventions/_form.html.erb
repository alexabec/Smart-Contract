    <h6><%="Battery Id"%></h6>
    <%= select_tag "battery_id", options_from_collection_for_select(Battery.all, "id", "id"), prompt: "None" %>
    <br>
    <h6><%="Column Id"%></h6>
    <%= select_tag "column_id", options_from_collection_for_select(Column.all, "id", "id"), prompt: "None" %>
    <br>
    <h6><%="Elevator Id"%></h6>
    <%= select_tag "elevator_id", options_from_collection_for_select(Elevator.all, "id", "id"), prompt: "None" %>
    <br>
    <h6><%="Results"%></h6>
    <%= text_field_tag "results", "Results" %>
    <br>
    <h6><%="Report"%></h6>
    <%= text_field_tag "report", "Report" %>
    <br>
    <h6><%="Status"%></h6>
    <%= text_field_tag "status", "Status" %>
